{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["@adobe/cc-ext-uxp-types", "@types/photoshop", "@types/node"]
  },
  "include": ["./src", "./webview-ui/src/webview.ts"]
}
