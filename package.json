{
  "name": "bolt-uxp",
  "version": "0.1.7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperbrew/bolt-uxp.git"
  },
  "homepage": "https://github.com/hyperbrew/bolt-uxp",
  "type": "module",
  "scripts": {
    "dev": "yarn cross-env MODE=dev vite build --watch",
    "build": "yarn cross-env MODE=build vite build",
    "ccx": "yarn cross-env MODE=package vite build",
    "zip": "yarn cross-env MODE=zip vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "hmr": "vite",
    "connect": "yarn cross-env ACTION=connect vite",
    "disconnect": "yarn cross-env ACTION=disconnect vite",
    "ccx-install": "yarn cross-env ACTION=install vite",
    "ccx-uninstall": "yarn cross-env ACTION=uninstall vite",
    "mac-build": "yarn mac-build-64 && yarn mac-build-arm",
    "mac-build-64": "xcodebuild -project src/hybrid/mac/bolt-uxp-hybrid.xcodeproj -target x64",
    "mac-build-arm": "xcodebuild -project src/hybrid/mac/bolt-uxp-hybrid.xcodeproj -target arm64",
    "win-build": "msbuild src/hybrid/win/bolt-uxp-hybrid.sln"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@adobe/cc-ext-uxp-types": "https://github.com/justintaylor-dev/cc-ext-uxp-types.git",
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "@tsconfig/svelte": "^5.0.0",
    "@types/node": "^20.8.7",
    "@types/photoshop": "^25.0.2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "sass": "^1.69.5",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.6",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-uxp-plugin": "^0.1.0",
    "ws": "^8.14.2"
  },
  "files": [
    "index.html",
    "package.json",
    "package.react.json",
    "package.svelte.json",
    "package.vue.json",
    "public/**/*",
    "public-hybrid/**/*",
    "public-zip/**/*",
    "README.md",
    "src/**/*",
    "tsconfig.json",
    "uxp.config.ts",
    "vite.config.ts",
    "yarn.lock"
  ]
}
